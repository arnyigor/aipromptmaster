<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Фильтры и сортировка"
        android:textAppearance="?attr/textAppearanceTitleLarge" />

    <!-- Секция сортировки -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Сортировка"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <RadioGroup
        android:id="@+id/radio_group_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_sort_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По умолчанию" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_sort_asc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По имени (А-Я)" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_sort_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По имени (Я-А)" />
    </RadioGroup>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Секция параметров -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Параметры"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_only_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показывать только выбранные"
        android:textAppearance="?attr/textAppearanceBodyLarge" />

    <!-- Кнопки действий -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Сбросить" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Применить" />
    </LinearLayout>

</LinearLayout>
