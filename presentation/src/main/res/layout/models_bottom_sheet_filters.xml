<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Заголовок сортировки -->
    <TextView
        android:id="@+id/text_sorting_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sorting"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Контейнер для сортировки -->
    <LinearLayout
        android:id="@+id/sorting_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sorting_title">

        <!-- Dropdown для выбора типа сортировки -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sort_type_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:hint="@string/sort_type_hint">

            <AutoCompleteTextView
                android:id="@+id/sort_type_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка направления сортировки -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sort_direction"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/sort_direction_toggle"
            app:icon="@android:drawable/arrow_down_float"
            app:iconPadding="0dp"
            app:iconSize="24dp" />

    </LinearLayout>

    <!-- Разделитель -->
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sorting_container" />

    <!-- Заголовок фильтров -->
    <TextView
        android:id="@+id/text_filters_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/filters"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <!-- Группа фильтров -->
    <LinearLayout
        android:id="@+id/filters_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_filters_title">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_only_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:text="@string/filter_favorite"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_only_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:text="@string/filter_selected"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_only_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:checked="true"
            android:padding="16dp"
            android:text="@string/filter_free_models"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_supports_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/filter_image_support"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

    </LinearLayout>

    <!-- Кнопка применить -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_apply"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="@string/filter_apply"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
