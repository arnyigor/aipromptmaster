<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Цветовая схема Material 3 для СВЕТЛОЙ темы -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorOnPrimary">@color/neutral_white</item>
        <item name="colorPrimaryContainer">@color/purple_light_accent</item>
        <item name="colorOnPrimaryContainer">@color/purple_dark</item>

        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorOnSecondary">@color/neutral_white</item>
        <item name="colorSecondaryContainer">@color/blue_secondary_container_light</item>
        <item name="colorOnSecondaryContainer">@color/blue_on_secondary_container_text_light</item>

        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/neutral_white</item>

        <item name="android:colorBackground">#FEFBFF</item>
        <item name="colorOnBackground">#1C1B1F</item>
        <item name="colorSurface">#FEFBFF</item>
        <item name="colorOnSurface">#1C1B1F</item>
        <item name="colorSurfaceVariant">#E7E0EC</item>
        <item name="colorOnSurfaceVariant">#49454F</item>
        <item name="colorOutline">#79747E</item>

        <!-- Статус-бар и навигационный бар -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Иконки статус-бара будут темными -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>

    </style>

    <style name="Theme.App.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.App.ActionButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <!-- Финальная тема приложения -->
    <style name="Theme.App" parent="Base.Theme.App">
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="chipStyle">@style/Widget.App.Chip.Filter</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.Dialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Стиль для MaterialCardView -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <!--
        Здесь не нужно указывать цвета вроде `cardBackgroundColor`.
        Виджет сам возьмет ?attr/colorSurface из темы.
        Здесь можно переопределить форму, elevation и т.д., если нужно.
        -->
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!-- Стиль для Filter Chip -->
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <!--
        Цвета фона, текста, иконки, рамки в разных состояниях (выбран/не выбран)
        будут автоматически браться из атрибутов темы:
        - colorSecondaryContainer / colorOnSecondaryContainer (для выбранного)
        - colorSurface / colorOnSurfaceVariant (для невыбранного)
        - colorOutline (для рамки)
        Вам не нужно их хардкодить.
        -->
    </style>


    <style name="ShapeAppearance.App.Dialog" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Стиль для TextInputLayout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- Цвет рамки и текста будет браться из ?attr/colorOutline и ?attr/colorOnSurface -->
        <!-- Ничего не нужно переопределять, если стандартное поведение устраивает -->
    </style>

    <!-- Стиль для диалогов -->
    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Dialog</item>
        <!-- Цвета кнопок и текста будут браться из основной темы -->
    </style>

    <!-- Стиль для текста -->
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>