<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="prompts" />
        <argument
            android:name="chatId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="promptId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_nav_home_to_promptViewFragment"
            app:destination="@id/composePromptView" />
        <action
            android:id="@+id/action_nav_home_to_addPromptFragment"
            app:destination="@id/composeEditPrompt" />
        <action
            android:id="@+id/action_nav_home_to_nav_chat"
            app:destination="@id/composeChatHistory" />
        <action
            android:id="@+id/action_nav_home_to_nav_settings"
            app:destination="@id/composeSettings" />
    </fragment>
    <fragment
        android:id="@+id/nav_chat"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="@string/title_llm_interaction"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="chat" />
        <argument
            android:name="chatId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_nav_chat_to_nav_settings"
            app:destination="@id/nav_settings" />
        <action
            android:id="@+id/action_nav_chat_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_chat_to_editSystemPromptFragment"
            app:destination="@id/editSystemPromptFragment" />
        <action
            android:id="@+id/action_chatFragment_to_fileViewerFragment"
            app:destination="@id/fileViewerFragment" />
        <action
            android:id="@+id/action_nav_chat_to_modelsFragment"
            app:destination="@id/nav_models" />
    </fragment>
    <fragment
        android:id="@+id/promptViewFragment"
        android:name="com.arny.aipromptmaster.presentation.ui.view.PromptViewFragment"
        android:label="@string/prompt_details"
        tools:layout="@layout/fragment_prompt_view">
        <argument
            android:name="promptId"
            app:argType="string" />
        <action
            android:id="@+id/action_promptViewFragment_to_addPromptFragment"
            app:destination="@id/addPromptFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPromptFragment"
        android:name="com.arny.aipromptmaster.presentation.ui.addprompt.EditPromptFragment"
        android:label="@string/edit_prompt_title"
        tools:layout="@layout/fragment_edit_prompt">
        <argument
            android:name="promptId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.arny.aipromptmaster.presentation.ui.settings.SettingsFragment"
        android:label="@string/ai_settings">
        <action
            android:id="@+id/action_nav_settings_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_settings_to_nav_chat"
            app:destination="@id/nav_chat" />
    </fragment>
    <fragment
        android:id="@+id/fileViewerFragment"
        android:name="com.arny.aipromptmaster.presentation.ui.chat.FileViewerFragment"
        android:label="@string/file_viewer"
        tools:layout="@layout/fragment_file_viewer">
        <argument
            android:name="fileId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/editSystemPromptFragment"
        android:name="com.arny.aipromptmaster.presentation.ui.editprompt.EditSystemPromptFragment"
        android:label="@string/system_prompt_edit_title"
        tools:layout="@layout/fragment_edit_system_prompt"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out">
        <argument
            android:name="initialPrompt"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="conversationId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_editSystemPromptFragment_to_nav_chat"
            app:destination="@id/nav_chat"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/nav_chathistory"
        android:name="com.arny.aipromptmaster.presentation.ui.chathistory.ChatHistoryFragment"
        android:label="@string/chat_history" >
        <action
            android:id="@+id/action_chatHistoryFragment_to_nav_chat"
            app:destination="@id/nav_chat" />
    </fragment>
    <fragment
        android:id="@+id/nav_models"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="ModelsFragment"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="models" />
    </fragment>

    <!-- Compose версии остальных экранов -->
    <fragment
        android:id="@+id/composeSettings"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="@string/ai_settings"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="settings" />
    </fragment>

    <fragment
        android:id="@+id/composePromptView"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="@string/prompt_details"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="promptView" />
        <argument
            android:name="promptId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/composeEditPrompt"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="@string/edit_prompt_title"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="editPrompt" />
        <argument
            android:name="promptId"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/composeChatHistory"
        android:name="com.arny.aipromptmaster.presentation.ui.compose.ComposeFragment"
        android:label="@string/chat_history"
        tools:layout="@layout/fragment_compose">
        <argument
            android:name="screenType"
            app:argType="string"
            android:defaultValue="chatHistory" />
    </fragment>
</navigation>